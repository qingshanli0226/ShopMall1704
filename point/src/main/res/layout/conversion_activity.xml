<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.example.common.view.MyToolBar
        android:id="@+id/conversion_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"></com.example.common.view.MyToolBar>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/conversion_re"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
        <TextView
            android:visibility="gone"
            android:id="@+id/conversion_tv"
            android:textSize="@dimen/sp_25"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:text="当前没有兑换记录!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></TextView>
    </RelativeLayout>

</LinearLayout>