<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    style="@style/w_match">
    <include layout="@layout/title_toolbar"></include>
    <jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout
        android:id="@+id/main_swipe"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <Spinner
                    style="@style/Widget.AppCompat.DropDownItem.Spinner"
                    android:layout_margin="@dimen/dp_10"
                    android:background="@drawable/edit_background"
                    android:entries="@array/spinner"
                    android:id="@+id/history_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></Spinner>
                <TextView
                    android:id="@+id/tv"
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:text="从"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    style="@style/w_wrap">
                </TextView>

                <EditText
                    android:id="@+id/start"
                    style="@style/history_edit"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/tv"
                    android:hint="开始日期"></EditText>
                <TextView
                    android:id="@+id/tv1"
                    android:layout_margin="10dp"
                    android:text="到"
                    android:textSize="20sp"
                    android:textColor="@android:color/black"
                    style="@style/w_wrap">
                </TextView>

                <EditText
                    android:id="@+id/stop"
                    style="@style/history_edit"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="结束日期"></EditText>
            </LinearLayout>
            <View
                android:background="@android:color/darker_gray"
                android:layout_width="match_parent"
                android:layout_height="1dp"></View>
            <RelativeLayout
                style="@style/w_match">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/history_re"
                    style="@style/w_match"></androidx.recyclerview.widget.RecyclerView>
                <TextView
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:textSize="25sp"
                    android:textColor="@android:color/black"
                    android:id="@+id/recently"
                    android:text="@string/history"
                    style="@style/w_wrap"></TextView>
            </RelativeLayout>
        </LinearLayout>
    </jp.co.recruit_lifestyle.android.widget.WaveSwipeRefreshLayout>



</LinearLayout>