<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
     <include layout="@layout/title_toolbar"></include>

     <RelativeLayout
         android:layout_width="match_parent"
         android:background="@mipmap/wzy"
         android:layout_height="203dp">

          <ImageView
              android:id="@+id/integral_img"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@mipmap/wu"
              android:layout_centerInParent="true"></ImageView>

          <TextView
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_marginTop="160dp"
              android:text="没有登录"
              android:textColor="@android:color/black"
              android:textSize="25sp"></TextView>
     </RelativeLayout>
     <View
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="20dp"></View>

     <RelativeLayout
         android:background="@android:color/holo_orange_light"
         android:layout_width="match_parent"
         android:layout_height="65dp">
          <TextView
              android:textSize="23sp"
              android:textColor="@android:color/black"
              android:layout_margin="15dp"
              android:text="我的积分:"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
          <TextView
              android:id="@+id/integral_point"
              android:textSize="23sp"
              android:layout_alignParentRight="true"
              android:layout_margin="15dp"
              android:text="20分"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
     </RelativeLayout>
     <View
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="20dp"></View>

     <RelativeLayout
         android:background="@android:color/holo_orange_light"
         android:id="@+id/exchange_gift"
         android:layout_width="match_parent"
         android:layout_height="65dp">
          <TextView
              android:textSize="23sp"
              android:textColor="@android:color/black"
              android:layout_margin="15dp"
              android:text="兑换礼品"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
          <ImageView
              android:background="@mipmap/right"
              android:layout_alignParentRight="true"
              android:layout_margin="15dp"
              android:layout_width="50dp"
              android:layout_height="50dp"></ImageView>
     </RelativeLayout>
     <View
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="20dp"></View>

     <RelativeLayout
         android:background="@android:color/holo_orange_light"
         android:id="@+id/exchange_record"
         android:layout_width="match_parent"
         android:layout_height="65dp">
          <TextView
              android:textSize="23sp"
              android:textColor="@android:color/black"
              android:layout_margin="15dp"
              android:text="兑换记录"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
          <ImageView
              android:background="@mipmap/right"
              android:layout_alignParentRight="true"
              android:layout_margin="15dp"
              android:layout_width="50dp"
              android:layout_height="50dp"></ImageView>
     </RelativeLayout>

     <View
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="20dp"></View>

     <RelativeLayout
         android:background="@android:color/holo_orange_light"
         android:id="@+id/exchange_point"
         android:layout_width="match_parent"
         android:layout_height="65dp">
          <TextView
              android:textSize="23sp"
              android:textColor="@android:color/black"
              android:layout_margin="15dp"
              android:text="我的计步"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"></TextView>
          <ImageView
              android:background="@mipmap/right"
              android:layout_alignParentRight="true"
              android:layout_margin="15dp"
              android:layout_width="50dp"
              android:layout_height="50dp"></ImageView>
     </RelativeLayout>

     <View
         android:background="@android:color/white"
         android:layout_width="match_parent"
         android:layout_height="match_parent"></View>
</LinearLayout>