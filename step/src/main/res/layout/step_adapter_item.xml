<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/step_item_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginLeft="10dp"
        android:padding="10dp"
        android:textSize="20dp"
        >

    </TextView>

    <TextView
        android:id="@+id/step_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:textStyle="bold"
        android:text="555"
        >

    </TextView>

    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="8.00.00"
        android:id="@+id/step_item_time"
        android:layout_marginRight="10sp" android:layout_alignParentRight="true" android:layout_below="@+id/step_item_count">
    </TextView>


</RelativeLayout>