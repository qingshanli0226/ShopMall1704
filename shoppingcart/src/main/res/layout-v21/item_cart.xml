<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#CCCCCC" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/page_backgroup"
        android:orientation="horizontal">

        <CheckBox

            android:id="@+id/check_box"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/cartMarginLeft"
            android:layout_marginRight="@dimen/cartMarginRight"
            android:checkMark="?android:attr/listChoiceIndicatorMultiple"
            android:gravity="center"
            android:minWidth="@dimen/cartminWidth"
            android:minHeight="@dimen/cartminHeight"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_adapter_list_pic"
            android:layout_width="@dimen/cartImageViewWidth"
            android:layout_height="@dimen/cartImageViewHeight"
            android:layout_marginTop="@dimen/cartImageViewMarginTop"
            android:layout_marginBottom="@dimen/cartImageViewMarginBottom"
            android:scaleType="centerCrop" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="@dimen/cartRelativeLayoutMarginLeft"
            android:layout_marginTop="@dimen/cartRelativeLayoutMarginTop">

            <TextView
                android:id="@+id/tv_goods_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/cartgoodsnameMarginRight"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/grey_color1"
                android:textSize="@dimen/cartgoodsnameTextSize" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="@dimen/cartRelativeLayoutMarginBottom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_goods_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:singleLine="true"
                    android:textColor="@color/orange_color"
                    android:textSize="@dimen/cartTextViewpriceTextSize"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_type_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/carttypeTextViewMarginLeft"
                    android:layout_toRightOf="@+id/tv_goods_price"
                    android:singleLine="true"
                    android:textColor="@color/grey_color3"
                    android:textSize="@dimen/carttypeTextViewTextSize"
                    tools:ignore="SmallSp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/cartLinearLayoutMarginRight"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_reduce"
                        android:layout_width="@dimen/cartReduceTextVIewWidth"
                        android:layout_height="@dimen/cartReduceTextVIewheight"
                        android:gravity="center"
                        android:text="-"
                        android:background="?android:selectableItemBackgroundBorderless"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/cartReduceTextVIewSize" />

                    <TextView
                        android:id="@+id/tv_num"
                        android:layout_width="@dimen/cartNumTextVIewWidth"
                        android:layout_height="@dimen/cartNumTextVIewHeight"
                        android:gravity="center"
                        android:singleLine="true"
                        android:text="@string/cartNumTextVIewText"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/cartNumTextVIewTextSize" />

                    <TextView
                        android:id="@+id/tv_add"
                        android:layout_width="@dimen/cartAddTextVIewWidth"
                        android:layout_height="@dimen/cartAddTextVIewHeight"
                        android:gravity="center"
                        android:text="+"
                        android:textColor="@color/grey_color1"
                        android:textSize="@dimen/cartReduceTextVIewSize" />
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>