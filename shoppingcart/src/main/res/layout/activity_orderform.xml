<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderFormActivity">


    <com.example.commen.custom.ToolbarCustom
        android:id="@+id/tc_cart_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:isShowRightImageView="false"
        android:background="#edc"
        app:isShowSettingTextView="false"
        app:title="填写订单" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/tc_cart_top"
        android:background="#CCCCCC" />

    <ScrollView
        android:id="@+id/sv_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/layout_bottom"
        android:layout_below="@+id/tc_cart_top"
        android:layout_marginTop="2dp"
        android:background="#e6e6e6">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_order_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp"
                android:text="@string/orderform_address"
                android:textSize="20sp" />


            <EditText
                android:id="@+id/et_input_address"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="8dp"
                android:background="@color/white"
                android:cursorVisible="false"
                android:hint="@string/orderform_hint"
                android:inputType="text"
                android:padding="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_order_goods"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:padding="8dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:padding="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="可用积分：" />

                <TextView
                    android:id="@+id/tv_order_point"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textColor="@color/red"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <CheckBox
                    android:id="@+id/cb_order_point_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/drawable_radio_button_checkout" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_order_information"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_marginTop="8dp"
                android:background="#aaa"
                android:orientation="vertical"
                android:padding="8dp"
                android:visibility="gone">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="库存不足提示信息: "
                    android:textColor="#f00"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/tv_order_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:text="错误提示" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="6dp"
            android:gravity="center|right"
            android:text="合计:"
            android:textSize="18sp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="6dp"
            tools:ignore="RtlHardcoded" />

        <TextView
            android:id="@+id/tv_order_total_price"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center|left"
            android:text="$0.00"
            android:textColor="#f00"
            android:textSize="24sp"
            tools:ignore="RtlHardcoded" />

        <Button
            android:id="@+id/bt_order_commit"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@color/orange"
            android:text="提交订单"
            android:textColor="@color/white" />
    </LinearLayout>
</RelativeLayout>