<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="wrap_content"
    android:padding="@dimen/dp_10"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="@dimen/dp_200"
            android:layout_height="@dimen/dp_200"
            android:id="@+id/mine_rcv_recommend_img"
            />
        <TextView
            android:id="@+id/mine_rcv_recommend_title"
            android:layout_width="@dimen/dp_200"
            android:layout_height="wrap_content"
            android:layout_below="@id/mine_rcv_recommend_img"
            android:textSize="@dimen/sp_12"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_gravity="center_horizontal"/>
            <TextView
            android:id="@+id/mine_rcv_recommend_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_12"
            android:layout_below="@id/mine_rcv_recommend_title"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/dp_15"
            android:textColor="@color/colorRed"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mine_look"
            android:layout_below="@id/mine_rcv_recommend_title"
            android:layout_toRightOf="@id/mine_rcv_recommend_price"
            android:textColor="@color/colorLimitGray"
            android:layout_marginLeft="@dimen/dp_60"/>

    </RelativeLayout>
</LinearLayout>