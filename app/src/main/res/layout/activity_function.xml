<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".function.FunctionActivity">

    <com.example.commen.custom.ToolbarCustom
        android:id="@+id/mToolBarCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fa6"
        app:tb_left_iv_isShow="true"
        app:tb_title_isShow="true" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#a6a6a6" />

    <RelativeLayout
        android:id="@+id/mRlFunction"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/mRv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </RelativeLayout>
</LinearLayout>