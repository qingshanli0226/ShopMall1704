<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/typeRelaTiveLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/rl_type_top"
        layout="@layout/title_common" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_type_top">

        <ListView
            android:id="@+id/type_left_lv"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:background="#11000000"
            android:scrollbars="none" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/type_right_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />
    </LinearLayout>

    <com.example.commen.custom.ErrorPageCustom
        android:id="@+id/error_type_page"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/rl_type_top" />

</RelativeLayout>