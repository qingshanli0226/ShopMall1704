<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="217dp"
        android:scaleType="fitXY"
        android:src="@drawable/home_title_background"
        tools:ignore="ContentDescription" />

    <RelativeLayout
        android:id="@+id/search_rl_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">

        <RelativeLayout
            android:id="@+id/search_layout"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <TextView
                android:id="@+id/search_tv_message"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:drawableTop="@drawable/user_channel_icon_feedback"
                android:gravity="center"
                android:text="@string/message"
                android:textColor="@color/colorWhite"
                android:layout_marginEnd="20dp" />

            <TextView
                android:id="@+id/search_tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="11.5dp"
                android:drawableLeft="@drawable/app_icon"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="#fff"
                android:textSize="17sp"
                android:textStyle="bold"
                android:layout_marginStart="20dp"
                android:drawableStart="@drawable/app_icon" />


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/search_ll_search"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="49dp"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/home_seach_square"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_alignParentStart="true">

            <ImageView
                style="@style/LittleImage"
                android:layout_marginLeft="10dp"
                android:src="@drawable/icon_search_white"
                tools:ignore="ContentDescription"
                android:layout_marginStart="10dp" />

            <TextView
                android:id="@+id/search_tv_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:cursorVisible="false"
                android:gravity="center_vertical"
                android:hint="@string/search_hint"
                android:textSize="15sp"
                tools:ignore="TextViewEdits"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp" />

            <ImageView
                style="@style/LittleImage"
                android:src="@drawable/camera_icon"
                tools:ignore="ContentDescription"
                android:layout_marginEnd="10dp"
                android:layout_marginRight="10dp" />

        </LinearLayout>

    </RelativeLayout>

    <com.example.commen.view.AnimationNestedScrollView
        android:id="@+id/search_sv_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/search_rl_top"
        android:layout_marginTop="-3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:descendantFocusability="blocksDescendants"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/home_recycler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </com.example.commen.view.AnimationNestedScrollView>
</RelativeLayout>