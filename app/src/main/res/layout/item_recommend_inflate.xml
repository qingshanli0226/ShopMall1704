<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_recommend_figure"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/bluemao" />

    <TextView
        android:id="@+id/tv_recommend_name"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:ellipsize="end"
        android:lines="2"
        style="@style/ShopMallText"
        android:text="全款预售【喵鹿酱】樱桃蜜语 毛呢绣花 小高腰半裙" />

    <TextView
        android:id="@+id/tv_recommend_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="￥88.00"
        android:textColor="#ff4242" />

</LinearLayout>