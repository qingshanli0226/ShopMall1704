<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    tools:context=".login.ui.SigninActivity"
    android:background="@mipmap/bei"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_marginTop="@dimen/loginMarginTop"
        android:layout_width="match_parent"
        android:layout_height="@dimen/signinRelativeLayoutHeight">

        <com.example.administrator.shaomall.login.diyview.Headportrait
            android:id="@+id/signinhead"
            android:layout_width="@dimen/signinHeadWidth"
            android:layout_height="@dimen/signinHeadHeight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="0dp" />

        <com.facebook.drawee.view.SimpleDraweeView
            android:visibility="gone"
            android:id="@+id/signinPhoto"
            android:layout_width="@dimen/signinFacebookWidth"
            android:layout_height="@dimen/signinFacebookHeight"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            fresco:roundAsCircle="true"
            fresco:roundedCornerRadius="@dimen/signinFacebookRadius" />
    </RelativeLayout>


    <LinearLayout
        android:layout_marginTop="@dimen/loginMarginTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/darkturquoise"
            android:layout_marginLeft="@dimen/signinUserTextViewMarginLeft"
            android:textSize="@dimen/signinUserTextViewTextSize"
            android:gravity="center"
            android:text="@string/signinUserTextViewText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <EditText

            android:id="@+id/signinUser"
            android:textColor="@color/darkturquoise"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>



    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/loginMarginTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView
            android:textColor="@color/darkturquoise"
            android:layout_marginLeft="@dimen/signinPassWordMarginLeft"
            android:textSize="@dimen/signinPassWordTextSize"
            android:gravity="center"
            android:text="@string/signinPassWordText"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent" />
        <EditText
            android:id="@+id/signinPass"
            android:textColor="@color/darkturquoise"
            android:background="@null"
            android:textCursorDrawable="@drawable/cursor_color"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"/>


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/loginMarginTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/signinSignin"
            android:layout_marginRight="@dimen/singinSiginTextViewMarginRight"
            android:textColor="@color/darkturquoise"
            android:textSize="@dimen/singinSiginTextViewTextSize"
            android:gravity="right|center"
            android:text="@string/singinSiginTextViewText"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    </LinearLayout>
    <com.example.administrator.shaomall.login.diyview.DIYButton

        android:id="@+id/diybutton"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/signinDiyMarginTop"
        android:layout_width="@dimen/signinDiyWidth"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2">

    </View>
</LinearLayout>