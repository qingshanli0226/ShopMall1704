<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:id="@+id/scroll_mine"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:id="@+id/mine_Relative"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_200"
                android:background="@mipmap/mine_backrgound">
                <ImageView
                    android:id="@+id/mine_img"
                    android:layout_width="@dimen/dp_70"
                    android:layout_height="@dimen/dp_70"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_marginTop="@dimen/dp_50"
                    android:src="@mipmap/ic_launcher_round" />

                <TextView
                    android:id="@+id/mine_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/mine_img"
                    android:layout_marginTop="@dimen/dp_15"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_toRightOf="@id/mine_img"
                    android:text="@string/mine_login"
                    android:textColor="@color/colorWhite" />
            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_rv_h"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorWhite" />



            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_rv_v"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@color/colorWhite" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_45"
                android:layout_gravity="center_horizontal"
                android:drawableStart="@drawable/love"
                android:padding="@dimen/dp_10"
                android:text="猜你喜欢"
                android:textSize="@dimen/sp_20"
                fresco:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior" />


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mine_rv_recommend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                fresco:layout_behavior="@string/bottom_sheet_behavior" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
    <com.example.common.view.MyToolBar
        android:id="@+id/mine_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/toolbar_style"
        android:alpha="0"/>
</RelativeLayout>


