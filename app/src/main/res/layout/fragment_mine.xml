<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.MineFragment"
    tools:mContext=".fragment.MineFragment">

    <com.example.common.TitleBar
        android:id="@+id/tb_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:fitsSystemWindows="true"
            android:theme="@style/Widget.Design.AppBarLayout">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fitsSystemWindows="true"
                app:collapsedTitleGravity="right"
                app:expandedTitleGravity="center"
                app:layout_scrollFlags="scroll|enterAlwaysCollapsed">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/mine_height_170"
                    app:layout_collapseMode="parallax">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/mine_height_170"
                        android:background="@mipmap/mine_img" />

                    <ImageView
                        android:id="@+id/iv_user_icon_avator"
                        android:layout_width="@dimen/mine_width_50"
                        android:layout_height="@dimen/mine_height_50"
                        android:layout_marginStart="@dimen/mine_mStart_15"
                        android:layout_marginTop="@dimen/mine_mTop_20"
                        android:scaleType="fitXY"
                        android:src="@mipmap/user_img" />

                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/iv_user_icon_avator"
                        android:layout_marginStart="@dimen/mine_mStart_10"
                        android:background="@null"
                        android:text="@string/mine_text"
                        android:textColor="@color/color_white" />



                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginTop="20dp"
                        android:layout_toEndOf="@id/iv_user_icon_avator"
                        android:background="@null"
                        android:textColor="#B8B8B8" />
                </RelativeLayout>


            </com.google.android.material.appbar.CollapsingToolbarLayout>

        </com.google.android.material.appbar.AppBarLayout>

        <include layout="@layout/nested_scroll"></include>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>