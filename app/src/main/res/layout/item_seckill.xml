<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/kill_background"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"
>
<LinearLayout
    android:background="@drawable/banner_background"
    android:layout_width="380dp"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_gravity="center_horizontal"

    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_arrow_left_flash" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="@string/skill_title"
            android:textColor="#000" />

        <TextView
            android:id="@+id/seckill_item_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/time_shape"
            android:padding="2dp"
            android:textColor="@color/colorWhite" />

        <TextView
            android:id="@+id/seckill_item_tv_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawablePadding="5dp"
            android:drawableRight="@drawable/home_arrow_right"
            android:gravity="end"
            android:text="@string/look_more" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/seckill_item_rv"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>

</LinearLayout>