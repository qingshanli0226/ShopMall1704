<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/dp_10">
    <ImageView
        android:id="@+id/search_item_picture"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="@dimen/dp_10"
        tools:ignore="ContentDescription" />
    <ImageView
        android:id="@+id/search_item_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_item_picture"
        android:layout_alignTop="@+id/search_item_picture"
        android:src="@drawable/recomment_icon"
        tools:ignore="ContentDescription"
        android:layout_toEndOf="@+id/search_item_picture" />
    <TextView
        android:id="@+id/search_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_item_picture"
        android:layout_below="@+id/search_item_icon"
        android:ellipsize="end"
        android:lines="2"
        android:padding="10dp"
        android:textColor="@color/black"
        android:text="现货【桂】绿林 梨花头内扣Lolita日常绿色渐变原宿 洛丽塔假发"
        android:layout_toEndOf="@+id/search_item_picture" />
        <TextView
            android:id="@+id/search_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:text="￥249"
            android:textSize="20sp"
             android:layout_toRightOf="@+id/search_item_picture"
            android:layout_below="@+id/search_item_name"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_toEndOf="@+id/search_item_picture" />



</RelativeLayout>