<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="标题"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/iv_toolbar_back_left"
            android:layout_width="38dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:scaleType="fitXY"
            android:src="@drawable/ic_action_back_left" />

        <TextView
            android:id="@+id/tv_toolbar_setting"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="12dp"
            android:layout_marginRight="12dp"
            android:layout_toStartOf="@id/iv_toolbar_message_right"
            android:layout_toLeftOf="@id/iv_toolbar_message_right"
            android:gravity="center"
            android:text="@string/commen_boolbar_tv_setting"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/iv_toolbar_message_right"
            android:layout_width="28dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_gravity="center"
            android:layout_marginEnd="14dp"
            android:layout_marginRight="14dp"
            android:src="@drawable/ic_action_message" />
    </RelativeLayout>
</LinearLayout>