<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_toolbar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <TextView
            android:id="@+id/tv_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/toolbar_title_text"
            android:textColor="@color/toolbar_title_color_white"
            android:textSize="@dimen/toolbar_text_size_sp_22" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_toolbar_left"
                android:layout_width="@dimen/toolbar_dp_38"
                android:layout_height="@dimen/toolbar_dp_38"
                android:contentDescription="@string/todo"
                android:scaleType="fitXY"
                android:src="@drawable/ic_action_back_left_white" />

            <TextView
                android:id="@+id/tv_toolbar_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="@dimen/toolbar_dp_14"
                android:layout_marginRight="@dimen/toolbar_dp_14"
                android:layout_marginStart="@dimen/toolbar_dp_14"
                android:layout_weight="1"
                android:background="@drawable/toolbar_search_square"
                android:drawableStart="@drawable/ic_action_search_black"
                android:drawableLeft="@drawable/ic_action_search_black"
                android:gravity="center_vertical"
                android:text="@string/toolbar_text_search_hint"
                android:textColor="#A4A4A4"
                android:padding="@dimen/toolbar_dp_2" />

            <TextView
                android:id="@+id/tv_toolbar_right"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="@dimen/toolbar_dp_14"
                android:layout_marginRight="@dimen/toolbar_dp_14"
                android:gravity="center"
                android:text="@string/toolbar_setting_text"
                android:textColor="@color/toolbar_title_color_white"
                android:textSize="@dimen/toolbar_text_size_sp_16" />

            <ImageView
                android:id="@+id/iv_toolbar_right"
                android:layout_width="@dimen/toolbar_dp_28"
                android:layout_height="@dimen/toolbar_dp_28"
                android:layout_gravity="center"
                android:layout_marginEnd="@dimen/toolbar_dp_14"
                android:layout_marginRight="@dimen/toolbar_dp_14"
                android:contentDescription="@string/toolbar_right_message"
                android:scaleType="fitXY"
                android:src="@mipmap/message_icon_white" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>