<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_margin="@dimen/dp_20"
        android:id="@+id/itemSearchImg"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchTitle"
        android:textSize="@dimen/sp_18"

        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_toRightOf="@id/itemSearchImg"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchBrief"
        android:layout_marginTop="@dimen/dp_5"
        android:layout_toRightOf="@id/itemSearchImg"
        android:layout_below="@id/itemSearchTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchPrice"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@id/itemSearchBrief"
        android:layout_toRightOf="@id/itemSearchImg"
        android:textSize="@dimen/sp_20"
        android:textColor="@android:color/holo_red_dark"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_below="@+id/itemSearchImg"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>
