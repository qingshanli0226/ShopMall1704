<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/dp_10"
    android:background="@drawable/cardview">

    <TextView
        android:text="@string/buyNum"
        android:layout_toLeftOf="@id/popuDel"
        android:layout_alignBottom="@id/popuDel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/popuNum"
        android:layout_width="@dimen/buy_three"
        android:layout_height="@dimen/buy_two"
        android:layout_centerInParent="true"
        android:text="数量"
        android:gravity="center"
        android:background="@color/buyGray"
        android:textColor="@color/buyRed"/>

    <TextView
        android:id="@+id/popuDel"
        android:background="@color/buyGray"
        android:layout_margin="@dimen/buy_one"
        android:gravity="center"
        android:layout_width="@dimen/buy_two"
        android:layout_height="@dimen/buy_two"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/popuNum"
        android:text="－" />

    <TextView
        android:id="@+id/popuAdd"
        android:background="@color/buyGray"
        android:layout_margin="@dimen/buy_one"
        android:gravity="center"
        android:layout_width="@dimen/buy_two"
        android:layout_height="@dimen/buy_two"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/popuNum"
        android:text="+" />

    <Button
        android:id="@+id/popuSure"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/buySure"
        style="@style/BuyBut"/>

</RelativeLayout>
