<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/dpsize_10">

        <ImageView
            android:id="@+id/iv_buy_gov"
            android:layout_width="@dimen/recyclerimgsize"
            android:layout_height="@dimen/recyclerimgsize"
            android:layout_marginLeft="@dimen/dpsize_10"
            android:background="@mipmap/ic_launcher"
            android:scaleType="fitXY" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dpsize_20"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_buy_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="2"
                android:text="123"
                android:textColor="@color/color4040"
                android:textSize="@dimen/dpsize_20" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/tv_buy_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="￥0.00"
                    android:textColor="@color/colorRed"
                    android:textSize="@dimen/dpsize_16" />

                <TextView
                    android:id="@+id/tv_buy_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpsize_10"
                    android:layout_toRightOf="@id/tv_buy_price"
                    android:text="×"
                    android:textSize="@dimen/dpsize_16" />

                <TextView
                    android:id="@+id/tv_buy_orderitemnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpsize_10"
                    android:layout_toRightOf="@id/tv_buy_symbol"
                    android:text="1"
                    android:textSize="@dimen/dpsize_16" />

                <TextView
                    android:id="@+id/tv_buy_itemprice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/dpsize_30"
                    android:layout_toRightOf="@id/tv_buy_orderitemnum"
                    android:text="￥0.00"
                    android:textSize="@dimen/dpsize_15" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:background="#22000000" />

</LinearLayout>