<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/payRel"
    android:paddingBottom="@dimen/dp_15">
    <com.example.common.view.MyToolBar
        android:id="@+id/myToolBar"
        android:background="@drawable/toolbar_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:layout_below="@id/myToolBar"
        android:layout_above="@id/foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
    <View
        android:id="@+id/foot"
        android:background="@color/buyBigGray"
        android:layout_width="match_parent"
        android:layout_above="@id/head"
        android:layout_height="@dimen/px_one"/>
    <RelativeLayout
        android:id="@+id/head"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60"
        android:paddingRight="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10">
        <Button
            android:id="@+id/payBut"
            android:layout_alignParentBottom="true"
            android:text="@string/buyPay"
            style="@style/BuyBut"
            android:layout_alignParentRight="true"/>
        <TextView
            android:id="@+id/orderMoney"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/orderDe"
            android:layout_centerVertical="true"
            android:text="减免积分:"
            android:layout_marginRight="@dimen/buy_Littlefive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/subtractIntegra"
            android:layout_toRightOf="@id/orderDe"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <CheckBox
            android:id="@+id/checkInegra"
            android:button="@null"
            android:drawableLeft="@drawable/checkbut"
            android:layout_alignParentBottom="true"
            android:text="@string/buySelectInteger"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_alignBottom="@id/payMoney"
            android:layout_toLeftOf="@id/payMoney"
            android:text="总计:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/payMoney"
            android:textColor="@color/buyRed"
            android:textSize="@dimen/buy_two"
            android:layout_alignParentRight="true"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/poTe"
            android:text="用户目前积分:"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/userPoint"
            android:layout_toRightOf="@id/poTe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>