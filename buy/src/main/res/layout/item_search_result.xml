<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_margin="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_50"
        android:layout_alignParentRight="true"
        android:id="@+id/itemSearchAvatar"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:layout_toRightOf="@+id/itemSearchFigure"
        android:layout_marginTop="@dimen/dp_5"
        android:textSize="@dimen/sp_15"
        android:layout_below="@+id/itemSearchSaying"
        android:id="@+id/itemSearchComment"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:layout_margin="@dimen/dp_5"
        android:id="@+id/itemSearchFigure"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchSaying"
        android:textSize="@dimen/sp_15"
        android:layout_alignTop="@id/itemSearchFigure"
        android:layout_toRightOf="@id/itemSearchFigure"
        android:layout_width="@dimen/dp_220"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:textSize="@dimen/sp_16"
        android:textColor="@android:color/black"
        android:layout_marginTop="@dimen/dp_60"
        android:id="@+id/itemSearchUsername"
        android:layout_toRightOf="@id/itemSearchFigure"
        android:layout_below="@+id/itemSearchSaying"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <View
        android:layout_marginTop="@dimen/dp_10"
        android:layout_below="@+id/itemSearchUsername"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"
        android:layout_height="1dp"></View>
</RelativeLayout>
