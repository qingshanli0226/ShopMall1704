<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemSearchAvatar"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchComment"
        android:layout_toRightOf="@id/itemSearchAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/itemSearchFigure"
        android:layout_below="@id/itemSearchAvatar"
        android:layout_width="@dimen/dp_100"
        android:layout_height="@dimen/dp_100"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchSaying"
        android:layout_alignTop="@id/itemSearchFigure"
        android:layout_toRightOf="@id/itemSearchFigure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/itemSearchUsername"
        android:layout_below="@id/itemSearchFigure"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>
