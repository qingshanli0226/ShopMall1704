<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:mContext=".activity.OrderActivity">

    <com.example.common.TitleBar
        android:id="@+id/tb_buy_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_buy_order"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_buy_pay"
        android:layout_below="@id/tb_buy_order" />

    <LinearLayout
        android:id="@+id/ll_buy_pay"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/color_white"
        android:orientation="horizontal"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dpsize_10"
            android:text="合计:"
            android:textColor="@color/colorBlacklittlelight"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_buy_shopcartTotal"
            android:layout_width="@dimen/dpsize_0"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="@dimen/dpsize_10"
            android:text="￥0.00"
            android:textColor="@color/color_lightred"
            android:textSize="@dimen/dpsize_15" />

        <com.example.common.view.MyOKButton
            android:id="@+id/btn_buy_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认付款"
            android:textColor="@color/color_white" />
    </LinearLayout>
</RelativeLayout>