<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/buyWhite"
    android:id="@+id/goodsRel">
    <com.example.common.view.MyToolBar
        android:id="@+id/myToolBar"
        android:background="@drawable/toolbar_style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <ScrollView
        android:layout_below="@id/myToolBar"
        android:layout_above="@id/foot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/goodsImage"
                android:src="@drawable/img"
                android:contentDescription="@string/app_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buy_two_hun"/>
            <ImageView
                android:id="@+id/beiImage"
                android:src="@drawable/img"
                android:layout_width="match_parent"
                android:layout_height="@dimen/buy_two_hun"/>
            <TextView
                android:id="@+id/goodsTitle"
                android:textColor="@color/buyPink"
                android:textSize="@dimen/sp_25"
                android:layout_below="@id/goodsImage"
                android:text="标题"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/goodsOldPrice"
                android:layout_below="@id/goodsTitle"
                android:text="¥:++++"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/reTex"
                android:text="¥:"
                android:textSize="@dimen/buy_text_two"
                android:textColor="@color/buyPink"
                android:layout_below="@id/goodsOldPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/goodsNewPrice"
                android:layout_toRightOf="@id/reTex"
                android:layout_below="@id/goodsOldPrice"
                android:text="123"
                android:textSize="@dimen/buy_text_two"
                android:textColor="@color/buyPink"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <WebView
                android:id="@+id/webView"
                android:layout_below="@id/goodsNewPrice"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout
        android:id="@+id/foot"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/collectBut"
            android:src="@drawable/collect"
            android:layout_width="@dimen/buy_four"
            android:layout_height="@dimen/buy_four"/>
        <ImageView
            android:id="@+id/cartBut"
            android:layout_toRightOf="@id/collectBut"
            android:src="@drawable/cart"
            android:layout_height="@dimen/buy_four"
            android:layout_width="@dimen/buy_four"/>
        <TextView
            android:id="@+id/redNum"
            style="@style/RedDotView"
            android:layout_alignRight="@id/cartBut"
            android:layout_alignTop="@id/cartBut"/>
        <Button
            android:id="@+id/joinCartBut"
            style="@style/BuyBut"
            android:layout_toLeftOf="@id/goPayBut"
            android:text="@string/buyAdd"/>
        <Button
            android:id="@+id/goPayBut"
            android:layout_alignParentRight="true"
            android:text="@string/buyNow"
            style="@style/BuyBut"/>
    </RelativeLayout>

</RelativeLayout>
