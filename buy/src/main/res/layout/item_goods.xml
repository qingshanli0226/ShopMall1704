<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/buy_one"
    android:padding="@dimen/dp_5"
    android:background="@drawable/goodscolor">
    <CheckBox
        android:id="@+id/itemCheck"
        android:button="@null"
        android:layout_marginRight="@dimen/dp_10"
        android:background="@drawable/checkbut"
        android:layout_centerVertical="true"
        android:layout_width="@dimen/dp_20"
        android:layout_height="@dimen/dp_20"/>
    <ImageView
        android:id="@+id/itemImg"
        android:padding="@dimen/dp_3"
        android:layout_toRightOf="@id/itemCheck"
        android:layout_width="@dimen/buy_one_hund"
        android:layout_height="@dimen/buy_one_hund"/>
    <TextView
        android:id="@+id/itemTitle"
        android:text="标题"
        android:textColor="@color/buyPink"
        android:textSize="@dimen/buy_text_of"
        android:maxLines="1"
        android:layout_toRightOf="@id/itemImg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/reTe"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/itemImg"
        android:text="¥"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemPrice"
        android:textColor="@color/buyRed"
        android:layout_toRightOf="@id/reTe"
        android:layout_below="@id/itemTitle"
        android:layout_centerVertical="true"
        android:text="价格"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/itemNum"
        android:layout_alignTop="@id/itemAddBut"
        android:text="数量"
        android:gravity="center"
        android:layout_width="@dimen/buy_three"
        android:layout_height="@dimen/dp_25"
        android:layout_toLeftOf="@id/itemAddBut"/>
    <TextView
        android:id="@+id/itemDelBut"
        android:layout_margin="10dp"
        android:background="@color/buyWhite"
        android:gravity="center"
        android:textSize="@dimen/sp_20"
        android:layout_toLeftOf="@id/itemNum"
        android:layout_below="@id/itemPrice"
        android:text="-"
        android:textStyle="bold"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"/>
    <TextView
        android:id="@+id/itemAddBut"
        android:gravity="center"
        android:background="@color/buyWhite"
        android:textSize="@dimen/sp_20"
        android:layout_alignParentRight="true"
        android:textStyle="bold"
        android:layout_margin="10dp"
        android:layout_below="@id/itemPrice"
        android:text="+"
        android:layout_width="@dimen/dp_25"
        android:layout_height="@dimen/dp_25"/>
</RelativeLayout>
