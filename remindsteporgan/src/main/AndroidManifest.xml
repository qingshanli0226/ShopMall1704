<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.remindsteporgan">

    <!-- 允许程序打开网络套接字 -->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许程序设置内置sd卡的写权限 -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <!-- 允许程序获取网络状态 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 允许程序访问WiFi网络信息 -->
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <!-- 允许程序读写手机状态和身份 -->
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <!-- 允许程序访问CellID或WiFi热点来获取粗略的位置 -->
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />

    <application>
        <meta-data
            android:name="com.amap.api.v2.apikey"
            android:value="fe17378001fb84e6a7eb85a3f7780f10"></meta-data>

        <activity android:name=".RemindActivity" />

        <service
            android:name=".util.LiveService"
            android:process=":live_service" />

        <activity android:name=".HistoryActivity" />

        <service android:name=".Util.FrontService" />
        <service
            android:name=".Util.LocalService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".Util.RemoteService"
            android:enabled="true"
            android:exported="true"
            android:process="remote.service.seven_four"> <!-- 代表在另一个进程启动该组件service -->

        </service>
        <service
            android:name=".Util.LiveJobService"
            android:enabled="true"
            android:exported="true"
            android:permission="android.permission.BIND_JOB_SERVICE"> <!-- >添加使用的权限 -->

        </service>

        <activity android:name=".RemindMapActivity"></activity>
    </application>

</manifest>